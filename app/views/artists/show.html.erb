<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <h1 style="text-align: left"><%= @artist.name %></h1>



      <p>
        <strong>Genre:</strong>
        <%= @artist.genre.name %>
      </p>

      <strong>Songs:</strong>
      <ul>
        <%  @artist.songs.each do |ditty|%>
        <li><%= ditty.name %></li>
        <% end %>

      </ul>




      <%= link_to 'Edit', edit_artist_path(@artist), class: 'btn btn-default' %> |
      <%= link_to 'Back', artists_path, class: 'btn btn-default' %>
    </div>
  </div>
</div>